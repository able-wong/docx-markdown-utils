{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "moduleResolution": "Node",
    "isolatedModules": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "vitest.config.ts",
    "eslint.config.mjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
