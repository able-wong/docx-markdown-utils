{
  "compilerOptions": {
    "target": "ES6",
    "module": "Nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "moduleResolution": "NodeNext",
    "isolatedModules": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
