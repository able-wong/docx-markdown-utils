{
  "name": "docx-markdown-utils",
  "version": "0.5.1",
  "description": "Utilities for converting between DOCX and Markdown formats",
  "keywords": [
    "markdown",
    "docx",
    "converter",
    "utils"
  ],
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "node": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      },
      "browser": {
        "import": "./dist/browser.js",
        "types": "./dist/browser.d.ts"
      },
      "default": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    },
    "./browser": {
      "import": "./dist/browser.js",
      "types": "./dist/browser.d.ts"
    },
    "./bundle": "./dist/browser.bundle.js"
  },
  "browser": {
    "./dist/index.js": "./dist/browser.js"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:node": "vitest run --config vitest.node.config.ts",
    "test:browser": "vitest run --config vitest.browser.config.ts",
    "test:dual": "npm run test:node && npm run test:browser",
    "serve": "python3 -m http.server 8000",
    "build": "tsc -p tsconfig.build.json && npm run build:bundle",
    "build:bundle": "rollup -c",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "author": "John Wong",
  "license": "Apache-2.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "happy-dom": "^18.0.1",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "rollup": "^4.28.1",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  },
  "dependencies": {
    "@m2d/remark-docx": "^0.1.0",
    "docx": "^9.5.1",
    "mammoth": "^1.9.0",
    "node-html-parser": "^7.0.1",
    "rehype-parse": "^9.0.1",
    "rehype-remark": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "remark-lint": "^10.0.1",
    "remark-parse": "^11.0.0",
    "remark-preset-lint-recommended": "^7.0.1",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix"
  }
}
